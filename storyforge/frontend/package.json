{
  "name": "storyforge-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "npx vite preview",
    "test": "jest --env=jsdom",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen http://localhost:5173",
    "test:e2e:ui": "playwright test --ui",
    "mcp:server": "node start-mcp-server.js",
    "test:architecture": "npm run lint:console && npm run analyze:components && npm run check:error-boundaries",
    "lint:console": "grep -r 'console\\.' src/ | wc -l",
    "analyze:components": "find src -name '*.jsx' -exec wc -l {} + | sort -n | tail -10",
    "check:error-boundaries": "grep -r 'ErrorBoundary' src/ | wc -l",
    "check:hardcoded": "grep -rE '(100|500|1000|5000|10000|Black Market|Detective|Third Path)' src/ --include='*.js' --include='*.jsx' | grep -v 'GameConstants' | wc -l"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.20",
    "@mui/material": "^5.14.20",
    "@tanstack/react-virtual": "^3.2.0",
    "@xyflow/react": "^12.6.0",
    "axios": "^1.6.2",
    "d3-force": "^3.0.0",
    "dagre": "^0.8.5",
    "date-fns": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@tanstack/react-query": "^4.36.1",
    "react-router-dom": "^6.20.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.5",
    "@executeautomation/playwright-mcp-server": "^1.0.5",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/dagre": "^0.7.52",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.9.0",
    "playwright": "^1.52.0",
    "vite": "^5.0.0",
    "whatwg-fetch": "^3.6.20"
  }
}
