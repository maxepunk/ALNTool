{
  "name": "storyforge-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "lint": "eslint src --ext .js --max-warnings 0",
    "lint:fix": "eslint src --ext .js --fix",
    "verify:migrations": "node scripts/verify-migrations.js",
    "verify:migrations:fix": "node scripts/verify-migrations.js --auto-fix",
    "verify:pre-deploy": "node scripts/pre-deploy-verify.js",
    "verify:all": "npm run verify:migrations && npm run verify:pre-deploy && npm run docs:verify-sync",
    "docs:init": "node scripts/docs/update-docs.js init",
    "docs:task-complete": "node scripts/docs/update-docs.js task-complete",
    "docs:verify-sync": "node scripts/docs/update-docs.js verify-sync",
    "docs:status-report": "node scripts/docs/update-docs.js status-report",
    "docs:test": "node scripts/docs/test-automation.js",
    "docs:verify": "node scripts/docs/verify-documentation.js",
    "docs:verify-comprehensive": "node scripts/docs/verify-documentation.js",
    "docs:health": "node scripts/docs/health-dashboard.js",
    "docs:check-links": "node scripts/docs/verify-documentation.js",
    "docs:check-stale": "node scripts/docs/verify-documentation.js"
  },
  "keywords": [
    "notion",
    "storyforge",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend service for StoryForge - Immersive Narrative Design Hub",
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "better-sqlite3": "^11.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@eslint/js": "^9.30.0",
    "axios": "^1.10.0",
    "better-sqlite3": "^11.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.0",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^3.0.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3"
  }
}
